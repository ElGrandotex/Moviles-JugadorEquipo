<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".UpdateJugadorActivity">

    <TextView
        android:id="@+id/editHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Editar Jugador"
        android:textColor="@color/green"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/updateSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/editHeading"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/updateNameEditText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Nombre"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/editHeading"
        android:background="@drawable/green_border"
        android:layout_marginTop="24dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/updatePosicionEditText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="PosiciÃ³n"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/updateNameEditText"
        android:background="@drawable/green_border"
        android:layout_marginTop="24dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/updateDorsalEditText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Dorsal"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/updatePosicionEditText"
        android:background="@drawable/green_border"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/updateEquipoEditText"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Equipo"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/updateDorsalEditText"
        android:background="@drawable/green_border"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/updateEquipoEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/baseline_sports_soccer_24" />

</RelativeLayout>